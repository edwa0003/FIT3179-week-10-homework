{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "PPP by Country (2013-2023)",
  "width": "container",
  "height": 500,
  "params": [
      {
          "name": "Year_selection",
          "value": 2023,
          "bind": {
              "input": "range",
              "min": 2013,
              "max": 2023,
              "step": 1,
              "name": "Year: "
          }
      },
      {
          "name": "zoom_level",
          "value": 150,
          "bind": {
              "input": "range",
              "min": 50,
              "max": 300,
              "step": 10,
              "name": "Zoom: "
          }
      },
      {
          "name": "center_to",
          "value": [0, 0],
          "bind": {
              "input": "select",
              "options": [
                  [-98.35, 39.5],
                  [10, 50],
                  [78, 22],
                  [100, -10],
                  [134.5, -25],
                  [20, -30],
                  [-70, -40]
              ],
              "labels": ["USA", "Europe", "India", "Southeast Asia", "Australia", "Africa", "South America"],
              "name": "Map Centre: "
          }
      }
  ],
  "projection": {
      "type": "equirectangular",
      "center": { "expr": "center_to" },
      "scale": { "expr": "zoom_level" }
  },
  "layer": [
      {
          "data": {
              "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
              "format": { "type": "topojson", "feature": "countries" }
          },
          "transform": [
              {
                  "calculate": "'Data not available in ' + datum.properties.name",
                  "as": "note"
              }
          ],
          "mark": {
              "type": "geoshape",
              "fill": "#ddd",
              "stroke": "white",
              "strokeWidth": 1
          },
          "encoding": { "tooltip": { "field": "note" } }
      },
      {
          "data": {
              "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-week-10-homework/refs/heads/main/data/Long_format_PPP_data_from_2013_to_2023_for_all_countries.csv"
          },
          "transform": [
              {
                  "lookup": "properties.name",
                  "from": {
                      "data": {
                          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
                          "format": {
                              "type": "topojson",
                              "feature": "countries"
                          }
                      },
                      "key": "properties.name"
                  },
                  "as": "geo"
              },
              { "filter": "datum.Year == Year_selection" }
          ],
          "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
          "encoding": {
              "shape": { "field": "geo", "type": "geojson" },
              "color": {
                  "field": "PPP",
                  "type": "quantitative",
                  "scale": {
                      "domain": [1000, 150000],
                      "scheme": "blues"
                  },
                  "legend": { "format": ".2s" }
              },
              "tooltip": [
                  { "field": "properties.name", "type": "nominal", "title": "Country" },
                  {
                      "field": "PPP",
                      "type": "quantitative",
                      "title": "Purchasing Power Parity",
                      "format": ","
                  },
                  { "field": "Year", "type": "quantitative", "title": "Year" }
              ]
          }
      }
  ],
  "config": {}
}
