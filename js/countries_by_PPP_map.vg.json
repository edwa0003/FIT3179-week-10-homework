{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Purchasing Power Parity (PPP) by Country (2013-2023)",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "params": [
      {
        "name": "Year_selection",
        "value": 2023,
        "bind": {
          "input": "range",
          "min": 2013,
          "max": 2023,
          "step": 1,
          "name": "Year: "
        }
      },
      {
        "name": "zoom_level",
        "value": 200,
        "bind": {
          "input": "range",
          "min": 50,
          "max": 500,
          "step": 10,
          "name": "Zoom: "
        }
      },
      {
        "name": "center_to",
        "value": [0, 0],
        "bind": {
          "input": "select",
          "options": [
            [0, 0],
            [-100, 40],
            [100, 30],
            [0, -30]
          ],
          "labels": ["World", "USA", "Asia", "Africa"],
          "name": "Focus: "
        }
      }
    ],
    "data": {
      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {"filter": "datum.Year == Year_selection"},
      {
        "lookup": "properties.ISO_A3",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-week-10-homework/refs/heads/main/data/PPP_from_2013_to_2023.csv"
          },
          "key": "ISO_A3",
          "fields": ["PPP"]
        }
      },
      {"calculate": "datum.PPP + 1", "as": "PPP_log"}
    ],
    "mark": {"type": "geoshape", "stroke": "white", "fill": "lightgray"},
    "encoding": {
      "color": {
        "field": "PPP_log",
        "type": "quantitative",
        "scale": {"type": "log"},
        "legend": {"title": "PPP (Log Scale)"}
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "PPP", "type": "quantitative", "title": "PPP (Current Year)"}
      ]
    }
  }
  