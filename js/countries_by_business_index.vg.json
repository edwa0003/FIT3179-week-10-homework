{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/edwa0003/FIT3179-week-10-homework/refs/heads/main/data/ease_of_doing_business_index_2019.csv"
  },
  "transform": [
    {
      "sort": [{"field": "2019", "order": "ascending"}]
    },
    {
      "window": [
        {"op": "row_number", "as": "rank"}
      ]
    },
    {
      "filter": "datum.rank >= sliderValue && datum.rank < sliderValue + 20"
    }
  ],
  "params": [
    {
      "name": "sliderValue",
      "value": 1,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 170,
        "step": 10,
        "name": "Countries: "
      }
    }
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Country",
      "type": "nominal",
      "sort": {"field": "2019", "order": "ascending"}
    },
    "x": {
      "field": "2019",
      "type": "quantitative",
      "title": "Ease of Doing Business Index (2019)"
    },
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "2019", "type": "quantitative"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"grid": false}
  }
}