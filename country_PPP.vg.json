{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World PPP Visualization",
    "vconcat": [
      {
        "width": "container",
        "height": 500,
        "title": "Choropleth Map of PPP by Country",
        "projection": {"type": "equalEarth"},
        "params": [
          {
            "name": "Year_selection",
            "value": 2022,
            "bind": {"input": "range", "min": 2013, "max": 2023, "step": 1, "name": "Year: "}
          }
        ],
        "layer": [
          {
            "data": {
              "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
          },
          {
            "data": {
              "url": "countries_and_PPP.csv",
              "format": "csv"
            },
            "transform": [
              {"lookup": "ISO2", "from": {"data": "path_to_your_ppp_data", "key": "ISO2"}, "as": "geo"},
              {"filter": "datum.year == Year_selection"}
            ],
            "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
            "encoding": {
              "shape": {"field": "geo", "type": "geojson"},
              "color": {"field": "PPP", "type": "quantitative", "scale": {"scheme": "blues"}},
              "tooltip": [
                {"field": "country", "type": "nominal", "title": "Country"},
                {"field": "PPP", "type": "quantitative", "title": "PPP"},
                {"field": "year", "type": "quantitative", "title": "Year"}
              ]
            }
          }
        ]
      },
      {
        "width": "container",
        "height": 300,
        "title": "Line Chart for PPP Trends",
        "mark": "line",
        "encoding": {
          "x": {"field": "year", "type": "temporal", "title": "Year"},
          "y": {"field": "PPP", "type": "quantitative", "title": "PPP Value"},
          "color": {"field": "country", "type": "nominal"}
        }
      }
    ]
  }
  